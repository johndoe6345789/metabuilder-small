# Docker Dev Container for MetaBuilder C++ Development
# Includes Conan, CMake, compilers, and all development tools
FROM ubuntu:22.04

# Prevent interactive prompts during build
ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=UTC

# Install system dependencies
RUN apt-get update && apt-get install -y \
    # Build essentials
    build-essential \
    cmake \
    ninja-build \
    ccache \
    pkg-config \
    # Compilers
    gcc-12 \
    g++-12 \
    clang-15 \
    clang-tidy-15 \
    clang-format-15 \
    lldb-15 \
    # Python for Conan
    python3 \
    python3-pip \
    python3-dev \
    # Version control
    git \
    git-lfs \
    # Debugging and profiling
    gdb \
    valgrind \
    strace \
    ltrace \
    # Networking tools
    curl \
    wget \
    netcat \
    # SSL/TLS
    libssl-dev \
    ca-certificates \
    # SQLite
    sqlite3 \
    libsqlite3-dev \
    # PostgreSQL client
    libpq-dev \
    postgresql-client \
    # Utilities
    vim \
    nano \
    less \
    tree \
    htop \
    tmux \
    zsh \
    && rm -rf /var/lib/apt/lists/*

# Set default compiler to GCC 12
RUN update-alternatives --install /usr/bin/gcc gcc /usr/bin/gcc-12 100 && \
    update-alternatives --install /usr/bin/g++ g++ /usr/bin/g++-12 100 && \
    update-alternatives --install /usr/bin/clang clang /usr/bin/clang-15 100 && \
    update-alternatives --install /usr/bin/clang++ clang++ /usr/bin/clang++-15 100 && \
    update-alternatives --install /usr/bin/clang-tidy clang-tidy /usr/bin/clang-tidy-15 100

# Install Conan 2.x
RUN pip3 install --no-cache-dir conan && \
    conan profile detect --force

# Configure Conan default profile
RUN conan profile detect --force && \
    echo "[conf]" >> ~/.conan2/profiles/default && \
    echo "tools.system.package_manager:mode=install" >> ~/.conan2/profiles/default && \
    echo "tools.system.package_manager:sudo=True" >> ~/.conan2/profiles/default

# Copy host .conan2 cache if available (speeds up builds significantly)
# This will be copied from the build context
# Usage: docker build --build-arg COPY_CONAN_CACHE=1 .
ARG COPY_CONAN_CACHE=0
COPY --chown=root:root .conan2-cache/ /root/.conan2/ 2>/dev/null || true
RUN if [ "$COPY_CONAN_CACHE" = "1" ] && [ -d /root/.conan2/p ]; then \
        echo "✅ Conan cache copied from host - faster builds!"; \
    else \
        echo "ℹ️  No host Conan cache - will download packages on first build"; \
    fi

# Install Node.js 20 (for TypeScript DBAL development)
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - && \
    apt-get install -y nodejs && \
    npm install -g npm@latest

# Install Rust (for workflow plugins)
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
ENV PATH="/root/.cargo/bin:${PATH}"

# Install Go 1.21+ (for workflow plugins)
RUN wget -q https://go.dev/dl/go1.21.6.linux-amd64.tar.gz && \
    tar -C /usr/local -xzf go1.21.6.linux-amd64.tar.gz && \
    rm go1.21.6.linux-amd64.tar.gz
ENV PATH="/usr/local/go/bin:${PATH}"
ENV GOPATH="/workspace/go"

# Install Mojo (if available for Linux)
# Note: Mojo requires manual installation - add instructions in README

# Create workspace directory
WORKDIR /workspace

# Set up git config (will be overridden by user's .gitconfig mount)
RUN git config --global --add safe.directory /workspace

# Configure ccache
ENV CCACHE_DIR=/workspace/.ccache
ENV CMAKE_C_COMPILER_LAUNCHER=ccache
ENV CMAKE_CXX_COMPILER_LAUNCHER=ccache

# Set up shell
RUN chsh -s /bin/zsh
ENV SHELL=/bin/zsh

# Install oh-my-zsh for better dev experience
RUN sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)" || true

# Create helpful aliases
RUN echo 'alias ll="ls -lah"' >> ~/.zshrc && \
    echo 'alias ctest="ctest --output-on-failure"' >> ~/.zshrc && \
    echo 'alias ninja-build="ninja -C _build"' >> ~/.zshrc && \
    echo 'alias conan-install="conan install . --build=missing"' >> ~/.zshrc

# Expose common ports
EXPOSE 8080 3000 5432

# Default command (keep container running for development)
CMD ["/bin/zsh"]
