# ============================================================================
# PHASE 7: EMAIL SERVICE - FLASK API CONFIGURATION
# ============================================================================

# Flask Application
FLASK_ENV=development
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
LOG_LEVEL=INFO

# CORS Configuration
# Allowed origins for email client frontend
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://emailclient.example.com

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL database for email service
# Format: postgresql://user:password@host:port/database
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=email_service

# SQLAlchemy connection string (alternative to individual DB_* vars)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/email_service

# ============================================================================
# CREDENTIAL ENCRYPTION
# ============================================================================

# SHA-512 password hashing (no external secret needed)
CREDENTIAL_ALGORITHM=sha512

# ============================================================================
# RATE LIMITING
# ============================================================================

# Redis configuration for rate limiting
# 50 requests/minute per user (configurable)
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# ASYNC TASKS & BACKGROUND JOBS (Celery)
# ============================================================================

# Celery broker for task queue
CELERY_BROKER_URL=redis://localhost:6379/0

# Celery result backend
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# JWT AUTHENTICATION (Optional)
# ============================================================================

# JWT secret key (change in production!)
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================================================
# LOGGING
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log output (stdout or filepath)
LOG_OUTPUT=stdout

# ============================================================================
# TESTING
# ============================================================================

# Testing configuration
TEST_DATABASE_URL=sqlite:///:memory:
