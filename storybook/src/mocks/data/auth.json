{
  "metadata": {
    "packageId": "auth_components",
    "name": "Authentication Components",
    "category": "ui"
  },
  "renders": {
    "password-strength-indicator.weak": {
      "description": "Weak password strength",
      "component": {
        "type": "PasswordStrengthIndicator",
        "props": {
          "password": "abc123",
          "strength": 1,
          "message": "Weak password",
          "hint": "At least 8 characters with uppercase, lowercase, and numbers"
        }
      }
    },
    "password-strength-indicator.medium": {
      "description": "Medium password strength",
      "component": {
        "type": "PasswordStrengthIndicator",
        "props": {
          "password": "Password123",
          "strength": 2,
          "message": "Medium strength",
          "hint": "At least 8 characters with uppercase, lowercase, and numbers"
        }
      }
    },
    "password-strength-indicator.strong": {
      "description": "Strong password strength",
      "component": {
        "type": "PasswordStrengthIndicator",
        "props": {
          "password": "P@ssw0rd!2024",
          "strength": 4,
          "message": "Strong password",
          "hint": "At least 8 characters with uppercase, lowercase, and numbers"
        }
      }
    },
    "password-strength-indicator.empty": {
      "description": "Empty password (no indicator shown)",
      "component": {
        "type": "PasswordStrengthIndicator",
        "props": {
          "password": "",
          "strength": 0,
          "message": "",
          "hint": "At least 8 characters with uppercase, lowercase, and numbers"
        }
      }
    },
    "auth-form-layout.login": {
      "description": "Login page layout",
      "component": {
        "type": "AuthFormLayout",
        "props": {
          "title": "WorkflowUI",
          "subtitle": "Sign in to your account",
          "footerText": "Don't have an account?",
          "footerLinkHref": "/register",
          "footerLinkText": "Sign up",
          "children": {
            "type": "Box",
            "props": {
              "children": "Login form content goes here"
            }
          }
        }
      }
    },
    "auth-form-layout.register": {
      "description": "Register page layout",
      "component": {
        "type": "AuthFormLayout",
        "props": {
          "title": "WorkflowUI",
          "subtitle": "Create your account",
          "footerText": "Already have an account?",
          "footerLinkHref": "/login",
          "footerLinkText": "Sign in",
          "children": {
            "type": "Box",
            "props": {
              "children": "Register form content goes here"
            }
          }
        }
      }
    },
    "not-found-state.default": {
      "description": "404 error page with fail whale",
      "component": {
        "type": "NotFoundState",
        "props": {
          "errorCode": "404",
          "title": "Page not found",
          "description": "Looks like this page swam away! The workflow you're looking for doesn't exist or has been moved.",
          "primaryActionText": "Go to Dashboard",
          "primaryActionHref": "/",
          "secondaryActionText": "View Workflows",
          "secondaryActionHref": "/workflows"
        }
      }
    },
    "not-found-state.custom": {
      "description": "Custom 404 with different actions",
      "component": {
        "type": "NotFoundState",
        "props": {
          "errorCode": "404",
          "title": "Workflow Not Found",
          "description": "This workflow has been deleted or you don't have permission to access it.",
          "primaryActionText": "Browse Workflows",
          "primaryActionHref": "/workflows",
          "secondaryActionText": "Contact Support",
          "secondaryActionHref": "/support"
        }
      }
    },
    "header-actions.authenticated": {
      "description": "Header actions with authenticated user",
      "component": {
        "type": "HeaderActions",
        "props": {
          "theme": "light",
          "user": {
            "name": "John Doe",
            "email": "john@example.com"
          },
          "showUserMenu": false,
          "onToggleTheme": "() => console.log('toggle theme')",
          "onToggleUserMenu": "() => console.log('toggle user menu')",
          "onLogout": "() => console.log('logout')"
        }
      }
    },
    "header-actions.dark-mode": {
      "description": "Header actions with dark mode",
      "component": {
        "type": "HeaderActions",
        "props": {
          "theme": "dark",
          "user": {
            "name": "Jane Smith",
            "email": "jane@example.com"
          },
          "showUserMenu": false,
          "onToggleTheme": "() => console.log('toggle theme')",
          "onToggleUserMenu": "() => console.log('toggle user menu')",
          "onLogout": "() => console.log('logout')"
        }
      }
    },
    "header-actions.no-user": {
      "description": "Header actions without authenticated user",
      "component": {
        "type": "HeaderActions",
        "props": {
          "theme": "light",
          "onToggleTheme": "() => console.log('toggle theme')"
        }
      }
    }
  }
}
