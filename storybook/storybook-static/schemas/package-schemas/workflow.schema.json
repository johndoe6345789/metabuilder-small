{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Workflow Seed Data",
  "description": "Validation schema for workflow seed data files",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "Unique identifier for this workflow",
        "pattern": "^workflow_"
      },
      "name": {
        "type": "string",
        "description": "Display name for this workflow",
        "minLength": 1,
        "maxLength": 255
      },
      "description": {
        "type": ["string", "null"],
        "description": "Description of what this workflow does",
        "maxLength": 500
      },
      "nodes": {
        "type": "array",
        "description": "Workflow nodes (triggers, actions, conditions)",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": ["trigger", "action", "condition", "delay", "branch"]
            },
            "config": {
              "type": "object"
            }
          },
          "required": ["id", "type"]
        }
      },
      "edges": {
        "type": "array",
        "description": "Connections between workflow nodes",
        "items": {
          "type": "object",
          "properties": {
            "from": {
              "type": "string"
            },
            "to": {
              "type": "string"
            },
            "condition": {
              "type": ["string", "null"]
            }
          },
          "required": ["from", "to"]
        }
      },
      "enabled": {
        "type": "boolean",
        "description": "Whether workflow is enabled",
        "default": true
      },
      "version": {
        "type": "integer",
        "description": "Workflow version",
        "default": 1
      },
      "tenantId": {
        "type": ["string", "null"],
        "description": "Tenant ID (null = system-wide)"
      },
      "packageId": {
        "type": ["string", "null"],
        "description": "Package that defined this workflow"
      },
      "createdAt": {
        "type": ["integer", "null"],
        "description": "Creation timestamp"
      },
      "updatedAt": {
        "type": ["integer", "null"],
        "description": "Last update timestamp"
      }
    },
    "required": ["id", "name", "nodes", "edges"],
    "additionalProperties": false
  },
  "minItems": 1,
  "examples": [
    [
      {
        "id": "workflow_send_email",
        "name": "Send Email Notification",
        "description": "Send email when user signs up",
        "nodes": [
          {
            "id": "trigger_1",
            "type": "trigger",
            "config": {
              "event": "user.created"
            }
          },
          {
            "id": "action_1",
            "type": "action",
            "config": {
              "service": "email",
              "template": "welcome"
            }
          }
        ],
        "edges": [
          {
            "from": "trigger_1",
            "to": "action_1"
          }
        ],
        "enabled": true
      }
    ]
  ]
}
