{
  "$schema": "https://metabuilder.dev/schemas/tests.schema.json",
  "schemaVersion": "2.0.0",
  "package": "minimal-example",
  "description": "Simple test examples",

  "testSuites": [
    {
      "id": "basic-tests",
      "name": "Basic Function Tests",
      "description": "Simple unit tests for basic functions",

      "tests": [
        {
          "id": "test-add",
          "name": "should add two numbers",
          "act": {
            "type": "function_call",
            "target": "add",
            "input": { "a": 2, "b": 3 }
          },
          "assert": {
            "expectations": [
              {
                "type": "equals",
                "actual": "result",
                "expected": 5
              }
            ]
          }
        },
        {
          "id": "test-multiply-parameterized",
          "name": "should multiply numbers correctly",
          "parameterized": true,
          "parameters": [
            { "case": "2 * 3", "input": { "a": 2, "b": 3 }, "expected": 6 },
            { "case": "5 * 5", "input": { "a": 5, "b": 5 }, "expected": 25 },
            { "case": "0 * 10", "input": { "a": 0, "b": 10 }, "expected": 0 }
          ],
          "act": {
            "type": "function_call",
            "target": "multiply",
            "input": "{{input}}"
          },
          "assert": {
            "expectations": [
              {
                "type": "equals",
                "actual": "result",
                "expected": "{{expected}}"
              }
            ]
          }
        }
      ]
    }
  ]
}
