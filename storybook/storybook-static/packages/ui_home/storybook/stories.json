{
  "$schema": "https://metabuilder.dev/schemas/package-storybook.schema.json",
  "featured": true,
  "title": "Home Page Components",
  "description": "Landing page with hero, features, about, and contact sections",
  "stories": [
    {
      "name": "HomePage",
      "render": "home_ui",
      "description": "Complete home page with all sections",
      "type": "function"
    },
    {
      "name": "HeroSection",
      "render": "hero_section",
      "description": "Hero section with gradient title and CTAs",
      "args": {
        "title": "Build Anything, Visually",
        "subtitle": "A 6-level meta-architecture for creating entire applications through visual workflows, schema editors, and embedded scripting."
      }
    },
    {
      "name": "FeaturesSection",
      "render": "features_section",
      "description": "Features grid showcasing the 6 levels",
      "args": {
        "title": "Six Levels of Power"
      }
    },
    {
      "name": "FeatureCardLevel1",
      "render": "feature_card_1",
      "description": "Public Website feature card"
    },
    {
      "name": "FeatureCardLevel2",
      "render": "feature_card_2",
      "description": "User Area feature card"
    },
    {
      "name": "FeatureCardLevel3",
      "render": "feature_card_3",
      "description": "Moderator Panel feature card"
    },
    {
      "name": "FeatureCardLevel4",
      "render": "feature_card_4",
      "description": "Admin Panel feature card"
    },
    {
      "name": "FeatureCardLevel5",
      "render": "feature_card_5",
      "description": "God-Tier Builder feature card"
    },
    {
      "name": "FeatureCardLevel6",
      "render": "feature_card_6",
      "description": "Super God Panel feature card with NEW badge"
