{
  "$schema": "https://metabuilder.dev/schemas/package-styles.schema.json",
  "schemaVersion": "2.0.0",
  "colors": {
    "rolePublic": "#6c757d",
    "roleUser": "#17a2b8",
    "roleModerator": "#28a745",
    "roleAdmin": "#007bff",
    "roleGod": "#fd7e14",
    "roleSupergod": "#dc3545",
    "permissionEnabled": "#28a745",
    "permissionDisabled": "#6c757d",
    "permissionInherited": "#17a2b8",
    "cardSelected": "#007bff",
    "cardHover": "#e9ecef"
  },
  "spacing": {
    "cardPadding": "16px",
    "headerPadding": "24px",
    "contentPadding": "24px",
    "footerPadding": "16px",
    "gridSpacing": "16px",
    "listItemGap": "8px"
  },
  "shadows": {
    "card": "0 2px 8px rgba(0, 0, 0, 0.1)",
    "cardHover": "0 4px 12px rgba(0, 0, 0, 0.15)",
    "selectedIndicator": "0 2px 4px rgba(0, 123, 255, 0.3)"
  },
  "borders": {
    "cardRadius": "8px",
    "chipRadius": "16px",
    "selectedIndicatorHeight": "3px"
  },
  "transitions": {
    "cardHover": "all 0.2s ease-in-out",
    "permissionToggle": "background-color 0.15s ease"
  }
}
