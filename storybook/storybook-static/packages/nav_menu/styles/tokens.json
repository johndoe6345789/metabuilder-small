{
  "$schema": "https://metabuilder.dev/schemas/package-styles.schema.json",
  "schemaVersion": "2.0.0",
  "colors": {
    "sidebarBackground": "background.paper",
    "sidebarBorder": "divider",
    "navItemActive": "primary.main",
    "navItemHover": "action.hover",
    "navItemText": "text.primary",
    "navItemTextSecondary": "text.secondary",
    "navItemTextDisabled": "text.disabled",
    "navBadgeDefault": "#6c757d",
    "navBadgePrimary": "#1976d2",
    "navBadgeSuccess": "#28a745",
    "navBadgeWarning": "#ffc107",
    "navBadgeError": "#dc3545",
    "breadcrumbLink": "inherit",
    "breadcrumbCurrent": "text.primary",
    "breadcrumbSeparator": "text.disabled"
  },
  "spacing": {
    "sidebarWidth": "280px",
    "sidebarCollapsedWidth": "72px",
    "sidebarPadding": "16px",
    "navItemPaddingX": "8px",
    "navItemPaddingY": "4px",
    "navItemGap": "4px",
    "navGroupIndent": "16px",
    "menuHeight": "64px",
    "menuItemPaddingX": "16px",
    "menuItemPaddingY": "8px",
    "breadcrumbPaddingX": "16px",
    "breadcrumbPaddingY": "8px"
  },
  "shadows": {
    "sidebar": "none",
    "sidebarElevated": "2px 0 8px rgba(0, 0, 0, 0.1)",
    "menuDropdown": "0 4px 12px rgba(0, 0, 0, 0.15)",
    "navItemFocus": "0 0 0 2px rgba(25, 118, 210, 0.3)"
  },
  "transitions": {
    "sidebarCollapse": "width 0.2s ease-in-out",
    "navItemHover": "background-color 0.15s ease",
    "navGroupExpand": "height 0.2s ease-in-out",
    "iconRotate": "transform 0.2s ease"
  },
  "borders": {
    "sidebarBorder": "1px solid",
    "navDivider": "1px solid",
    "menuBottom": "1px solid"
  },
  "typography": {
    "navItemLabel": {
      "fontSize": "0.875rem",
      "fontWeight": 500
    },
    "navGroupLabel": {
      "fontSize": "0.875rem",
      "fontWeight": 600
    },
    "navSectionHeader": {
      "fontSize": "0.75rem",
      "fontWeight": 700,
      "textTransform": "uppercase",
      "letterSpacing": "0.05em"
    },
    "breadcrumbText": {
      "fontSize": "0.875rem",
      "fontWeight": 400
    },
    "breadcrumbCurrent": {
      "fontSize": "0.875rem",
      "fontWeight": 500
    }
  }
}
