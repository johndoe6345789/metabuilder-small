{
  "$schema": "https://metabuilder.dev/schemas/package-styles.schema.json",
  "schemaVersion": "2.0.0",
  "colors": {
    "formBackground": "#ffffff",
    "formBorder": "#e0e0e0",
    "inputBorder": "#c4c4c4",
    "inputFocus": "#1976d2",
    "errorText": "#d32f2f",
    "successText": "#2e7d32",
    "linkColor": "#1976d2",
    "linkHover": "#1565c0"
  },
  "spacing": {
    "formPadding": "24px",
    "fieldGap": "16px",
    "cardMaxWidth": "400px",
    "buttonHeight": "42px"
  },
  "shadows": {
    "card": "0 2px 8px rgba(0, 0, 0, 0.1)",
    "cardHover": "0 4px 16px rgba(0, 0, 0, 0.12)",
    "inputFocus": "0 0 0 2px rgba(25, 118, 210, 0.2)"
  },
  "borderRadius": {
    "card": "8px",
    "input": "4px",
    "button": "4px"
  },
  "typography": {
    "formTitle": {
      "fontSize": "24px",
      "fontWeight": 600,
      "lineHeight": 1.2
    },
    "fieldLabel": {
      "fontSize": "14px",
      "fontWeight": 500
    },
    "helperText": {
      "fontSize": "12px",
      "fontWeight": 400
    }
  }
}
