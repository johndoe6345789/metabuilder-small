  "schemaVersion": "2.0.0",
  "colors": {
    "fieldTypePrimary": "#1976d2",
    "fieldTypeSecondary": "#9c27b0",
    "fieldTypeInfo": "#0288d1",
    "constraintPrimaryKey": "#1976d2",
    "constraintForeignKey": "#ed6c02",
    "constraintUnique": "#9c27b0",
    "constraintNullable": "#757575",
