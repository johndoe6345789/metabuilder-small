{
  "$schema": "https://metabuilder.dev/schemas/package-styles.schema.json",
  "schemaVersion": "2.0.0",
  "colors": {
    "footerBackground": "var(--muted)",
    "footerBorder": "var(--border)",
    "footerText": "var(--muted-foreground)",
    "footerHeading": "var(--foreground)",
    "footerLinkHover": "var(--primary)",
    "socialIconBackground": "var(--muted-foreground)",
    "socialIconHoverBackground": "var(--primary)"
  },
  "spacing": {
    "footerContainer": "3rem 1.5rem 1.5rem",
    "footerContainerMd": "4rem 2rem 2rem",
    "footerGrid": "2rem",
    "footerGridMd": "3rem",
    "footerColumn": "1rem",
    "footerLinks": "0.75rem",
    "footerSocial": "1rem",
    "footerBottom": "2rem"
  },
  "shadows": {
    "socialIconHover": "0 -2px 0 0 currentColor"
  },
  "typography": {
    "footerHeading": {
      "fontSize": "0.875rem",
      "fontWeight": 600,
      "textTransform": "uppercase",
      "letterSpacing": "0.05em"
    },
    "footerLink": {
      "fontSize": "0.875rem"
    },
    "footerCopyright": {
      "fontSize": "0.75rem"
    },
    "footerBrandLogo": {
      "fontSize": "1.25rem",
      "fontWeight": 700
    },
    "footerBrandDescription": {
      "fontSize": "0.875rem",
      "lineHeight": 1.6,
      "maxWidth": "300px"
    }
  },
  "components": {
    "footerMain": {
      "width": "100%",
      "backgroundColor": "var(--muted)",
      "borderTop": "1px solid var(--border)",
      "marginTop": "auto"
    },
    "footerSocialLink": {
      "display": "flex",
      "alignItems": "center",
      "justifyContent": "center",
      "width": "36px",
      "height": "36px",
      "borderRadius": "0.375rem",
      "transition": "all 0.2s ease-in-out"
    }
  },
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px"
  }
}
