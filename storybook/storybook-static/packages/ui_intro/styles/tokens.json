{
  "$schema": "https://metabuilder.dev/schemas/package-styles.schema.json",
  "schemaVersion": "2.0.0",
  "colors": {
    "introEyebrow": "primary.main",
    "introTitle": "text.primary",
    "introDescription": "text.secondary",
    "introMediaBg": "grey.100"
  },
  "spacing": {
    "introSection": "64px",
    "introSectionCompact": "32px",
    "introContent": "32px",
    "introCta": "16px"
  },
  "shadows": {
    "introMedia": "0 4px 12px rgba(0, 0, 0, 0.1)"
  },
  "typography": {
    "eyebrow": {
      "fontWeight": 600,
      "letterSpacing": "2px"
    },
    "title": {
      "fontWeight": 700,
      "lineHeight": 1.2
    },
    "description": {
      "lineHeight": 1.6
    }
  },
  "breakpoints": {
    "titleSize": {
      "xs": "2.5rem",
      "md": "3.5rem",
      "lg": "4rem"
    },
    "descriptionSize": {
      "xs": "1rem",
      "md": "1.25rem"
    }
  }
}
