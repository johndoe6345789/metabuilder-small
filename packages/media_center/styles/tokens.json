{
  "$schema": "https://metabuilder.dev/schemas/package-styles.schema.json",
  "schemaVersion": "2.0.0",
  "colors": {
    "mediaLive": "#28a745",
    "mediaOffline": "#6c757d",
    "mediaProcessing": "#ffc107",
    "mediaError": "#dc3545",
    "radioAccent": "#9c27b0",
    "tvAccent": "#2196f3",
    "retroAccent": "#ff5722",
    "jobPending": "#17a2b8",
    "jobRunning": "#ffc107",
    "jobCompleted": "#28a745",
    "jobFailed": "#dc3545"
  },
  "spacing": {
    "dashboardGrid": "24px",
    "cardPadding": "16px",
    "playerControls": "12px",
    "channelList": "8px"
  },
  "shadows": {
    "card": "0 2px 8px rgba(0, 0, 0, 0.1)",
    "player": "0 4px 16px rgba(0, 0, 0, 0.2)",
    "activeChannel": "0 0 0 2px var(--media-accent)"
  },
  "animations": {
    "pulse": "pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite",
    "progress": "progress 1s linear infinite"
  }
}
