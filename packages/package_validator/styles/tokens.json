{
  "$schema": "https://metabuilder.dev/schemas/package-styles.schema.json",
  "schemaVersion": "2.0.0",
  "colors": {
    "validationSuccess": "#28a745",
    "validationError": "#dc3545",
    "validationWarning": "#ffc107",
    "validationInfo": "#17a2b8",
    "validationPending": "#6c757d",
    "errorBackground": "rgba(220, 53, 69, 0.1)",
    "warningBackground": "rgba(255, 193, 7, 0.1)",
    "successBackground": "rgba(40, 167, 69, 0.1)"
  },
  "spacing": {
    "validatorPadding": "24px",
    "resultCardPadding": "16px",
    "errorListGap": "8px",
    "sectionGap": "16px"
  },
  "shadows": {
    "resultCard": "0 2px 8px rgba(0, 0, 0, 0.1)",
    "validatorPanel": "0 4px 16px rgba(0, 0, 0, 0.12)"
  },
  "borders": {
    "errorItem": "1px solid rgba(220, 53, 69, 0.3)",
    "warningItem": "1px solid rgba(255, 193, 7, 0.3)",
    "successItem": "1px solid rgba(40, 167, 69, 0.3)"
  },
  "typography": {
    "errorCode": {
      "fontFamily": "JetBrains Mono, monospace",
      "fontSize": "12px"
    },
    "filePath": {
      "fontFamily": "JetBrains Mono, monospace",
      "fontSize": "11px",
      "color": "#6c757d"
    }
  }
}
