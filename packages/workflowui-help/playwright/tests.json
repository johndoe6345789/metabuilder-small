{
  "$schema": "https://metabuilder.dev/schemas/package-playwright.schema.json",
  "package": "workflowui-help",
  "version": "1.0.0",
  "description": "WorkflowUI Help & Docs pages tests - documentation and support",
  "tests": [
    {
      "name": "should display help page",
      "tags": ["@help", "@critical"],
      "timeout": 10000,
      "steps": [
        {
          "description": "Navigate to help",
          "action": "navigate",
          "url": "/help"
        },
        {
          "action": "waitForLoadState",
          "state": "domcontentloaded"
        },
        {
          "description": "Verify help page loaded",
          "action": "expect",
          "selector": "body",
          "assertion": {
            "matcher": "toContainText",
            "expected": "Help"
          }
        }
      ]
    },
    {
      "name": "should display docs page",
      "tags": ["@docs", "@critical"],
      "steps": [
        {
          "action": "navigate",
          "url": "/docs"
        },
        {
          "action": "waitForLoadState",
          "state": "domcontentloaded"
        },
        {
          "description": "Verify docs page loaded",
          "action": "expect",
          "selector": "body",
          "assertion": {
            "matcher": "toContainText",
            "expected": "Doc"
          }
        }
      ]
    },
    {
      "name": "should have navigation or TOC",
      "tags": ["@docs", "@navigation"],
      "steps": [
        {
          "action": "navigate",
          "url": "/docs"
        },
        {
          "action": "waitForLoadState",
          "state": "domcontentloaded"
        },
        {
          "description": "Check for doc navigation",
          "action": "expect",
          "selector": "body",
          "assertion": {
            "matcher": "toBeVisible"
          }
        }
      ]
    },
    {
      "name": "should have search functionality",
      "tags": ["@docs", "@search"],
      "steps": [
        {
          "action": "navigate",
          "url": "/docs"
        },
        {
          "action": "waitForLoadState",
          "state": "domcontentloaded"
        },
        {
          "description": "Look for search input",
          "action": "expect",
          "selector": "input[type='search'], input[placeholder*='search' i]",
          "assertion": {
            "matcher": "toBeVisible"
          }
        }
      ]
    }
  ]
}
