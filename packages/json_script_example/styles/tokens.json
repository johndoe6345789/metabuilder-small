{
  "$schema": "https://metabuilder.dev/schemas/package-styles.schema.json",
  "schemaVersion": "2.0.0",
  "colors": {
    "primary": "#2196F3",
    "secondary": "#FFC107",
    "success": "#4CAF50",
    "error": "#F44336",
    "warning": "#FF9800",
    "info": "#00BCD4",
    "background": "#FAFAFA",
    "text": "#212121",
    "expressionHighlight": "#E3F2FD",
    "operatorHighlight": "#FFF3E0",
    "resultPositive": "#C8E6C9",
    "resultNegative": "#FFCDD2"
  },
  "spacing": {
    "xs": "4px",
    "sm": "8px",
    "md": "16px",
    "lg": "24px",
    "xl": "32px",
    "demoCard": "20px",
    "resultGrid": "12px"
  },
  "shadows": {
    "demoCard": "0 2px 8px rgba(33, 150, 243, 0.15)",
    "resultCard": "0 1px 4px rgba(0, 0, 0, 0.08)",
    "operatorTable": "0 1px 3px rgba(0, 0, 0, 0.12)"
  },
  "typography": {
    "fontFamily": "Roboto, sans-serif",
    "fontSize": {
      "small": "12px",
      "medium": "14px",
      "large": "16px",
      "xlarge": "20px"
    },
    "codeFont": "JetBrains Mono, monospace"
  },
  "borderRadius": {
    "small": "2px",
    "medium": "4px",
    "large": "8px",
    "card": "8px"
  }
}
