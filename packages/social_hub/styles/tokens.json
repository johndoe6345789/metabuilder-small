{
  "$schema": "https://metabuilder.dev/schemas/package-styles.schema.json",
  "schemaVersion": "2.0.0",
  "colors": {
    "feedBackground": "#f8f9fa",
    "postBorder": "#e9ecef",
    "badgeCommunity": "#28a745",
    "badgeSpotlight": "#6f42c1",
    "badgeAnnouncement": "#007bff",
    "composerBackground": "#ffffff",
    "statCardBackground": "#ffffff",
    "heroGradientStart": "#667eea",
    "heroGradientEnd": "#764ba2",
    "liveIndicator": "#dc3545",
    "trendingTag": "#fd7e14"
