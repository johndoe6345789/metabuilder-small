{
  "index_patterns": ["logs-*"],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "index.refresh_interval": "5s",
      "index.lifecycle.name": "email-client-ilm",
      "index.lifecycle.rollover_alias": "logs",
      "index.mapping.total_fields.limit": 2000,
      "analysis": {
        "analyzer": {
          "default": {
            "type": "standard"
          },
          "log_analyzer": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": ["lowercase", "stop"]
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date",
          "format": "strict_date_optional_time||epoch_millis"
        },
        "message": {
          "type": "text",
          "analyzer": "log_analyzer"
        },
        "level": {
          "type": "keyword"
        },
        "service": {
          "type": "keyword"
        },
        "component": {
          "type": "keyword"
        },
        "type": {
          "type": "keyword"
        },
        "tags": {
          "type": "keyword"
        },
        "cluster": {
          "type": "keyword"
        },
        "environment": {
          "type": "keyword"
        },
        "tenant_id": {
          "type": "keyword"
        },
        "host": {
          "type": "keyword"
        },
        "hostname": {
          "type": "keyword"
        },
        "timestamp": {
          "type": "date",
          "format": "strict_date_optional_time||epoch_millis"
        },
        "http_method": {
          "type": "keyword"
        },
        "http_path": {
          "type": "keyword"
        },
        "http_status": {
          "type": "integer"
        },
        "response_time": {
          "type": "scaled_float",
          "scaling_factor": 1000
        },
        "response_time_numeric": {
          "type": "float"
        },
        "execution_time": {
          "type": "scaled_float",
          "scaling_factor": 1000
        },
        "execution_time_numeric": {
          "type": "float"
        },
        "task_name": {
          "type": "keyword"
        },
        "query": {
          "type": "text"
        },
        "query_duration": {
          "type": "float"
        },
        "query_duration_numeric": {
          "type": "float"
        },
        "smtp_status": {
          "type": "keyword"
        },
        "auth_method": {
          "type": "keyword"
        },
        "auth_status": {
          "type": "keyword"
        },
        "user": {
          "type": "keyword"
        },
        "request_id": {
          "type": "keyword"
        },
        "trace_id": {
          "type": "keyword"
        },
        "span_id": {
          "type": "keyword"
        },
        "source_ip": {
          "type": "ip"
        },
        "destination_ip": {
          "type": "ip"
        },
        "bytes_sent": {
          "type": "long"
        },
        "bytes_received": {
          "type": "long"
        },
        "error_code": {
          "type": "keyword"
        },
        "stack_trace": {
          "type": "text"
        },
        "msg": {
          "type": "text",
          "analyzer": "log_analyzer"
        },
        "task_msg": {
          "type": "text"
        }
      }
    }
  }
}
