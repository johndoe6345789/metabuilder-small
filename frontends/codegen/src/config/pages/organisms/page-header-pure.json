{
  "type": "MetabuilderLayoutStack",
  "props": {
    "direction": "vertical",
    "spacing": "none",
    "className": "border-b border-border bg-card px-4 sm:px-6 py-3 sm:py-4"
  },
  "conditional": {
    "if": "data.tabInfo",
    "then": [
      {
        "type": "MetabuilderWidgetPageHeaderContent",
        "bindings": {
          "title": {
            "source": "data.tabInfo.title"
          },
          "icon": {
            "source": "data.tabInfo.icon"
          },
          "description": {
            "source": "data.tabInfo.description"
          }
        }
      }
    ]
  }
}
