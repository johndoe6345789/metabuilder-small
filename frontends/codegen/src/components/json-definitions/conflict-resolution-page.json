{
  "id": "conflict-resolution-page-container",
  "type": "div",
  "props": {
    "className": "conflict-resolution-page"
  },
  "children": [
    {
      "id": "conflict-resolution-header-section",
      "type": "div",
      "props": {
        "className": "conflict-resolution-page__header-section"
      },
      "children": [
        {
          "id": "conflict-resolution-header-content",
          "type": "div",
          "props": {
            "className": "conflict-resolution-page__header-content"
          },
          "children": [
            {
              "id": "conflict-resolution-header",
              "type": "div",
              "children": [
                {
                  "id": "conflict-resolution-title",
                  "type": "h1",
                  "props": {
                    "className": "conflict-resolution-page__title",
                    "children": "Conflict Resolution"
                  }
                },
                {
                  "id": "conflict-resolution-description",
                  "type": "p",
                  "props": {
                    "className": "conflict-resolution-page__description",
                    "children": "Manage and resolve conflicts between local and remote versions"
                  }
                }
              ]
            },
            {
              "id": "conflict-resolution-stats",
              "type": "div",
              "props": {
                "className": "conflict-resolution-page__inline-stats"
              },
              "children": [
                {
                  "id": "stat-total",
                  "type": "div",
                  "props": {
                    "className": "conflict-resolution-page__stat-tile"
                  },
                  "children": [
                    {
                      "id": "stat-total-label",
                      "type": "div",
                      "props": {
                        "className": "conflict-resolution-page__stat-label",
                        "children": "Total Conflicts"
                      }
                    },
                    {
                      "id": "stat-total-value",
                      "type": "div",
                      "bindings": {
                        "children": "pageState.stats.totalConflicts"
                      },
                      "props": {
                        "className": "conflict-resolution-page__stat-value"
                      }
                    }
                  ]
                },
                {
                  "id": "stat-files",
                  "type": "div",
                  "props": {
                    "className": "conflict-resolution-page__stat-tile"
                  },
                  "children": [
                    {
                      "id": "stat-files-label",
                      "type": "div",
                      "props": {
                        "className": "conflict-resolution-page__stat-label",
                        "children": "File Conflicts"
                      }
                    },
                    {
                      "id": "stat-files-value",
                      "type": "div",
                      "bindings": {
                        "children": {
                          "source": "pageState.stats.conflictsByType.files",
                          "transform": "data || 0"
                        }
                      },
                      "props": {
                        "className": "conflict-resolution-page__stat-value"
                      }
                    }
                  ]
                },
                {
                  "id": "stat-models",
                  "type": "div",
                  "props": {
                    "className": "conflict-resolution-page__stat-tile"
                  },
                  "children": [
                    {
                      "id": "stat-models-label",
                      "type": "div",
                      "props": {
                        "className": "conflict-resolution-page__stat-label",
                        "children": "Model Conflicts"
                      }
                    },
                    {
                      "id": "stat-models-value",
                      "type": "div",
                      "bindings": {
                        "children": {
                          "source": "pageState.stats.conflictsByType.models",
                          "transform": "data || 0"
                        }
                      },
                      "props": {
                        "className": "conflict-resolution-page__stat-value"
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "conflict-resolution-main-content",
      "type": "div",
      "props": {
        "className": "conflict-resolution-page__main-content"
      },
      "children": [
        {
          "id": "conflict-resolution-content-wrapper",
          "type": "div",
          "props": {
            "className": "conflict-resolution-page__content-wrapper"
          },
          "children": [
            {
              "id": "conflict-resolution-actions",
              "type": "div",
              "props": {
                "className": "conflict-resolution-page__actions"
              },
              "children": [
                {
                  "id": "detect-button",
                  "type": "Button",
                  "bindings": {
                    "onClick": "pageState.handleDetect",
                    "disabled": "pageState.detectingConflicts"
                  },
                  "props": {
                    "size": "sm"
                  },
                  "children": [
                    {
                      "id": "detect-icon",
                      "type": "ArrowsClockwise",
                      "props": {
                        "size": 16
                      }
                    },
                    {
                      "id": "detect-text",
                      "type": "span",
                      "props": {
                        "children": "Detect Conflicts"
                      }
                    }
                  ]
                },
                {
                  "id": "clear-button",
                  "type": "Button",
                  "conditional": {
                    "if": "pageState.hasConflicts"
                  },
                  "bindings": {
                    "onClick": "pageState.clear"
                  },
                  "props": {
                    "size": "sm",
                    "variant": "outline"
                  },
                  "children": [
                    {
                      "id": "clear-text",
                      "type": "span",
                      "props": {
                        "children": "Clear All"
                      }
                    }
                  ]
                }
              ]
            },
            {
              "id": "conflict-list-container",
              "type": "div",
              "props": {
                "className": "conflict-resolution-page__list-container"
              },
              "children": [
                {
                  "id": "empty-state",
                  "type": "div",
                  "conditional": {
                    "if": "!pageState.hasConflicts"
                  },
                  "props": {
                    "className": "conflict-resolution-page__empty-state"
                  },
                  "children": [
                    {
                      "id": "empty-message",
                      "type": "div",
                      "props": {
                        "className": "conflict-resolution-page__empty-inner"
                      },
                      "children": [
                        {
                          "id": "empty-icon",
                          "type": "CheckCircle",
                          "props": {
                            "size": 48,
                            "className": "conflict-resolution-page__empty-icon"
                          }
                        },
                        {
                          "id": "empty-title",
                          "type": "h2",
                          "props": {
                            "className": "conflict-resolution-page__empty-title",
                            "children": "No Conflicts"
                          }
                        },
                        {
                          "id": "empty-description",
                          "type": "p",
                          "props": {
                            "className": "conflict-resolution-page__empty-desc",
                            "children": "Click \"Detect Conflicts\" to find conflicts between versions"
                          }
                        }
                      ]
                    }
                  ]
                },
                {
                  "id": "conflicts-list",
                  "type": "div",
                  "conditional": {
                    "if": "pageState.hasConflicts"
                  },
                  "props": {
                    "className": "conflict-resolution-page__conflicts-list"
                  },
                  "children": [
                    {
                      "id": "conflict-items",
                      "type": "map",
                      "bindings": {
                        "data": "pageState.conflicts",
                        "item": "conflict"
                      },
                      "children": [
                        {
                          "id": "conflict-item",
                          "type": "MetabuilderWidgetConflictCard",
                          "bindings": {
                            "conflict": "conflict",
                            "onResolve": "pageState.handleResolve",
                            "onViewDetails": "pageState.handleViewDetails",
                            "isResolving": {
                              "source": "pageState.resolvingConflict",
                              "transform": "data === conflict.id"
                            }
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "conflict-details-dialog-component",
      "type": "ConflictDetailsDialog",
      "bindings": {
        "conflict": "pageState.selectedConflict",
        "open": "pageState.detailsDialogOpen",
        "onOpenChange": "pageState.setDetailsDialogOpen",
        "onResolve": "pageState.handleResolve",
        "isResolving": "!!pageState.resolvingConflict"
      }
    }
  ]
}
