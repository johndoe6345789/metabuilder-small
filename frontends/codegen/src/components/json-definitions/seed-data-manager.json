{
  "id": "seed-data-manager-card",
  "type": "Card",
  "props": { "className": "seed-manager__card" },
  "children": [
    {
      "id": "card-header",
      "type": "div",
      "props": { "className": "seed-manager__header" },
      "children": [
        {
          "id": "title-row",
          "type": "div",
          "props": { "className": "seed-manager__title-row" },
          "children": [
            {
              "id": "title-icon",
              "type": "Database",
              "props": { "size": 20, "className": "seed-manager__title-icon" }
            },
            {
              "id": "card-title",
              "type": "CardTitle",
              "children": [{ "id": "title-text", "type": "text", "children": "Seed Data" }]
            }
          ]
        },
        {
          "id": "card-description",
          "type": "CardDescription",
          "children": [{ "id": "desc-text", "type": "text", "children": "Populate and manage example database records" }]
        }
      ]
    },
    {
      "id": "card-content",
      "type": "CardContent",
      "props": { "className": "seed-manager__content" },
      "children": [
        {
          "id": "loaded-alert",
          "type": "Alert",
          "conditional": { "if": "isLoaded" },
          "children": [
            { "id": "alert-icon", "type": "CheckCircle", "props": { "size": 16 } },
            {
              "id": "alert-description",
              "type": "AlertDescription",
              "children": [{ "id": "alert-text", "type": "text", "children": "Seed data is loaded and available" }]
            }
          ]
        },
        {
          "id": "buttons-container",
          "type": "div",
          "props": { "className": "seed-manager__actions" },
          "children": [
            {
              "id": "buttons-row",
              "type": "div",
              "props": { "className": "seed-manager__buttons-row" },
              "children": [
                {
                  "id": "load-tooltip",
                  "type": "Tooltip",
                  "props": { "title": "Populates the database with example records", "placement": "top" },
                  "children": [
                    {
                      "id": "load-button",
                      "type": "Button",
                      "bindings": {
                        "onClick": "onLoadSeedData",
                        "disabled": { "source": "isLoaded", "transform": "data.isLoaded" }
                      },
                      "props": { "variant": "filled" },
                      "children": [
                        {
                          "id": "load-button-content",
                          "type": "conditional-group",
                          "conditional": {
                            "if": "isLoading",
                            "else": [
                              { "id": "load-icon", "type": "Database", "props": { "size": 16 } },
                              { "id": "load-text", "type": "text", "children": "Load Seed Data" }
                            ]
                          },
                          "children": [
                            { "id": "loading-spin-1", "type": "Refresh", "props": { "className": "animate-spin", "size": 16 } },
                            { "id": "loading-text-1", "type": "text", "children": "Loading..." }
                          ]
                        }
                      ]
                    }
                  ]
                },
                {
                  "id": "reset-tooltip",
                  "type": "Tooltip",
                  "props": { "title": "Restores all data to its original seed state", "placement": "top" },
                  "children": [
                    {
                      "id": "reset-button",
                      "type": "Button",
                      "bindings": { "onClick": "onResetSeedData", "disabled": "isLoading" },
                      "props": { "variant": "outline" },
                      "children": [
                        {
                          "id": "reset-button-content",
                          "type": "conditional-group",
                          "conditional": {
                            "if": "isLoading",
                            "else": [
                              { "id": "reset-icon", "type": "ArrowClockwise", "props": { "size": 16 } },
                              { "id": "reset-text", "type": "text", "children": "Reset to Defaults" }
                            ]
                          },
                          "children": [
                            { "id": "loading-spin-2", "type": "Refresh", "props": { "className": "animate-spin", "size": 16 } },
                            { "id": "loading-text-2", "type": "text", "children": "Resetting..." }
                          ]
                        }
                      ]
                    }
                  ]
                },
                {
                  "id": "clear-tooltip",
                  "type": "Tooltip",
                  "props": { "title": "Removes all records from the database", "placement": "top" },
                  "children": [
                    {
                      "id": "clear-button",
                      "type": "Button",
                      "bindings": { "onClick": "onClearAllData", "disabled": "isLoading" },
                      "props": { "variant": "danger" },
                      "children": [
                        {
                          "id": "clear-button-content",
                          "type": "conditional-group",
                          "conditional": {
                            "if": "isLoading",
                            "else": [
                              { "id": "clear-icon", "type": "Trash", "props": { "size": 16 } },
                              { "id": "clear-text", "type": "text", "children": "Clear All Data" }
                            ]
                          },
                          "children": [
                            { "id": "loading-spin-3", "type": "Refresh", "props": { "className": "animate-spin", "size": 16 } },
                            { "id": "loading-text-3", "type": "text", "children": "Clearing..." }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "id": "helper-text",
              "type": "div",
              "props": { "className": "seed-manager__helper-text" },
              "children": [
                {
                  "id": "load-help",
                  "type": "p",
                  "children": [
                    { "id": "load-help-strong", "type": "strong", "children": "Load Seed Data: " },
                    { "id": "load-help-text", "type": "text", "children": "Populates the database with example records." }
                  ]
                },
                {
                  "id": "reset-help",
                  "type": "p",
                  "children": [
                    { "id": "reset-help-strong", "type": "strong", "children": "Reset to Defaults: " },
                    { "id": "reset-help-text", "type": "text", "children": "Restores all data to its original seed state." }
                  ]
                },
                {
                  "id": "clear-help",
                  "type": "p",
                  "children": [
                    { "id": "clear-help-strong", "type": "strong", "children": "Clear All Data: " },
                    { "id": "clear-help-text", "type": "text", "children": "Removes all records from the database." }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
