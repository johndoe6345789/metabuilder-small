{
  "id": "badge-root",
  "type": "Badge",
  "bindings": {
    "variant": "variant",
    "className": {
      "source": "size",
      "transform": "(() => { const sizeClasses = { sm: 'badge badge--sm', md: 'badge', lg: 'badge badge--lg' }; return sizeClasses[data] || sizeClasses.md; })()"
    }
  },
  "children": [
    {
      "id": "badge-icon",
      "type": "span",
      "props": {
        "className": "badge__icon"
      },
      "bindings": {
        "children": "icon"
      },
      "conditional": {
        "if": "icon"
      }
    },
    {
      "id": "badge-content",
      "type": "span",
      "bindings": {
        "children": "children"
      }
    }
  ]
}
