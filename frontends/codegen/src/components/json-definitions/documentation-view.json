{
  "id": "documentation-view",
  "type": "div",
  "className": "doc-view",
  "children": [
    {
      "id": "documentation-header",
      "type": "div",
      "className": "doc-view__header",
      "children": [
        {
          "id": "tabs-list",
          "type": "div",
          "className": "doc-view__tabs-list",
          "loop": {
            "source": "tabsData",
            "itemVar": "tab"
          },
          "children": [
            {
              "id": "doc-tab",
              "type": "Tab",
              "bindings": {
                "value": { "source": "tab.value" },
                "label": { "source": "tab.label" },
                "selected": { "source": "tab.isSelected" },
                "onClick": { "source": "tab.onSelect" }
              }
            }
          ]
        },
        {
          "id": "search-input-wrapper",
          "type": "div",
          "className": "doc-view__search-wrapper",
          "children": [
            {
              "id": "search-icon",
              "type": "MagnifyingGlass",
              "props": { "size": 18 },
              "className": "doc-view__search-icon"
            },
            {
              "id": "search-input",
              "type": "Input",
              "props": { "placeholder": "Search documentation..." },
              "className": "doc-view__search-input",
              "bindings": {
                "value": { "source": "searchQuery" },
                "onChange": { "source": "handleSearchChange" }
              }
            }
          ]
        }
      ]
    },
    {
      "id": "tabs-content",
      "type": "ScrollArea",
      "className": "doc-view__body",
      "children": [
        {
          "id": "content-wrapper",
          "type": "div",
          "className": "doc-view__content",
          "children": [
            {
              "id": "content-title",
              "type": "h2",
              "className": "doc-view__content-title",
              "bindings": {
                "children": { "source": "activeTabTitle" }
              }
            },
            {
              "id": "content-sections",
              "type": "div",
              "className": "doc-view__sections",
              "loop": {
                "source": "activeTabSections",
                "itemVar": "section"
              },
              "children": [
                {
                  "id": "section-para",
                  "type": "p",
                  "className": "doc-view__para",
                  "bindings": {
                    "children": { "source": "section.text" }
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
