{
  "id": "avatar-group-root",
  "type": "div",
  "bindings": {
    "className": {
      "source": "className",
      "transform": "data ? `avatar-group ${data}` : 'avatar-group'"
    }
  },
  "children": [
    {
      "id": "avatar-group-list",
      "type": "AvatarList",
      "bindings": {
        "avatars": "avatars",
        "max": "max",
        "size": "size"
      }
    },
    {
      "id": "avatar-group-remainder",
      "type": "div",
      "bindings": {
        "className": {
          "source": "size",
          "transform": "(() => { const sizeMap = { xs: 'avatar-group__remainder--xs', sm: 'avatar-group__remainder--sm', md: '', lg: 'avatar-group__remainder--lg' }; const mod = sizeMap[data] || ''; return mod ? `avatar-group__remainder ${mod}` : 'avatar-group__remainder'; })()"
        }
      },
      "conditional": {
        "if": "remainingCount",
        "transform": "avatars.length - (max || 5) > 0"
      },
      "children": [
        {
          "id": "avatar-group-count",
          "type": "span",
          "props": {
            "className": "avatar-group__count"
          },
          "bindings": {
            "children": {
              "source": "avatars",
              "transform": "`+${Math.max(data.length - (max || 5), 0)}`"
            }
          }
        }
      ]
    }
  ]
}
