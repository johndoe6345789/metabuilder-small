{
  "id": "tree-card-container",
  "type": "div",
  "bindings": {
    "className": {
      "source": "isSelected",
      "transform": "data ? 'tree-card tree-card--selected' : 'tree-card'"
    }
  },
  "children": [
    {
      "id": "tree-card-content",
      "type": "Stack",
      "props": { "spacing": "sm" },
      "children": [
        {
          "id": "tree-card-header",
          "type": "div",
          "props": { "className": "tree-card__header" },
          "children": [
            {
              "id": "tree-card-info",
              "type": "div",
              "props": { "className": "tree-card__info" },
              "children": [
                {
                  "id": "tree-card-name",
                  "type": "h4",
                  "props": { "className": "tree-card__name" },
                  "bindings": { "children": "tree.name" }
                },
                {
                  "id": "tree-card-description",
                  "type": "p",
                  "props": { "className": "tree-card__description" },
                  "bindings": { "children": "tree.description" },
                  "conditional": { "if": "tree.description" }
                },
                {
                  "id": "tree-card-badge-container",
                  "type": "div",
                  "children": [
                    {
                      "id": "tree-card-badge",
                      "type": "Badge",
                      "props": { "variant": "outline" },
                      "bindings": {
                        "children": {
                          "source": "tree.rootNodes.length",
                          "transform": "`${data} components`"
                        }
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
