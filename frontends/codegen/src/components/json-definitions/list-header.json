{
  "id": "list-header-container",
  "type": "Box",
  "props": {
    "className": "list-header"
  },
  "children": [
    {
      "type": "Flex",
      "align": "center",
      "justify": "between",
      "children": [
        {
          "type": "Box",
          "props": {
            "className": "list-header__left"
          },
          "children": [
            {
              "type": "Heading",
              "level": 3,
              "props": {
                "className": "list-header__title"
              },
              "children": [{ "type": "Text", "value": "{title}" }]
            },
            {
              "type": "Paragraph",
              "bindings": {
                "className": {
                  "source": "subtitle",
                  "transform": "data ? 'list-header__subtitle' : 'list-header__subtitle list-header__subtitle--hidden'"
                }
              },
              "children": [{ "type": "Text", "value": "{subtitle}" }]
            }
          ]
        },
        {
          "type": "Badge",
          "bindings": {
            "children": [{ "type": "Text", "value": "{count}" }],
            "className": {
              "source": "count",
              "transform": "data > 0 ? 'list-header__badge' : 'list-header__badge list-header__badge--hidden'"
            }
          }
        }
      ]
    }
  ]
}
