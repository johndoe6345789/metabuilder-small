{
  "id": "dbal-search-input",
  "type": "div",
  "props": {
    "style": { "position": "relative", "display": "flex", "alignItems": "center" }
  },
  "children": [
    {
      "id": "dbal-search-icon",
      "type": "MagnifyingGlass",
      "props": {
        "size": 14,
        "style": { "position": "absolute", "left": "8px", "top": "50%", "transform": "translateY(-50%)", "color": "var(--mat-sys-on-surface-variant)", "pointerEvents": "none", "zIndex": 1 }
      }
    },
    {
      "id": "dbal-search-field",
      "type": "input",
      "bindings": {
        "value": { "source": "hookData.query" },
        "onChange": { "source": "hookData.setQuery" },
        "onBlur": { "source": "hookData.handleBlur" },
        "onFocus": { "source": "hookData.handleFocus" }
      },
      "props": {
        "type": "text",
        "placeholder": "Search DBAL...",
        "style": {
          "height": "28px",
          "width": "160px",
          "paddingLeft": "28px",
          "paddingRight": "8px",
          "fontSize": "12px",
          "borderRadius": "6px",
          "border": "1px solid var(--mat-sys-outline-variant)",
          "background": "var(--mat-sys-surface)",
          "color": "var(--mat-sys-on-surface)",
          "outline": "none",
          "transition": "width 0.2s ease"
        }
      }
    },
    {
      "id": "dbal-search-dropdown",
      "type": "div",
      "condition": { "source": "hookData.showResults" },
      "props": {
        "style": {
          "position": "absolute",
          "left": 0,
          "top": "100%",
          "marginTop": "4px",
          "width": "288px",
          "borderRadius": "8px",
          "border": "1px solid var(--mat-sys-outline-variant)",
          "background": "var(--mat-sys-surface-container)",
          "boxShadow": "0 4px 12px rgba(0,0,0,0.15)",
          "zIndex": 50,
          "maxHeight": "256px",
          "overflowY": "auto"
        }
      },
      "children": [
        {
          "id": "dbal-loading",
          "type": "div",
          "condition": { "source": "hookData.loading" },
          "props": { "style": { "padding": "8px 12px", "fontSize": "12px", "color": "var(--mat-sys-on-surface-variant)" } },
          "children": [
            { "id": "dbal-loading-text", "type": "span", "children": ["Searching..."] }
          ]
        },
        {
          "id": "dbal-error",
          "type": "div",
          "condition": { "source": "hookData.error" },
          "props": { "style": { "padding": "8px 12px", "fontSize": "12px", "color": "var(--mat-sys-error)" } },
          "children": [
            { "id": "dbal-error-text", "type": "span", "bindings": { "children": { "source": "hookData.error" } } }
          ]
        }
      ]
    },
    {
      "id": "dbal-search-empty-dropdown",
      "type": "div",
      "condition": { "source": "hookData.showEmpty" },
      "props": {
        "style": {
          "position": "absolute",
          "left": 0,
          "top": "100%",
          "marginTop": "4px",
          "width": "288px",
          "borderRadius": "8px",
          "border": "1px solid var(--mat-sys-outline-variant)",
          "background": "var(--mat-sys-surface-container)",
          "boxShadow": "0 4px 12px rgba(0,0,0,0.15)",
          "zIndex": 50
        }
      },
      "children": [
        {
          "id": "dbal-empty-text",
          "type": "div",
          "props": { "style": { "padding": "16px 12px", "fontSize": "12px", "color": "var(--mat-sys-on-surface-variant)", "textAlign": "center" } },
          "children": [
            { "id": "dbal-no-results", "type": "span", "children": ["No DBAL results found"] }
          ]
        }
      ]
    }
  ]
}
