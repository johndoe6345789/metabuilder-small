{
  "id": "info-section-container",
  "type": "Box",
  "className": "info-section",
  "children": [
    {
      "type": "Box",
      "className": "info-section__heading",
      "children": [
        {
          "type": "Heading",
          "level": 3,
          "className": "info-section__title",
          "children": [{ "type": "Text", "value": "{title}" }]
        },
        {
          "type": "Paragraph",
          "className": "info-section__description",
          "children": [{ "type": "Text", "value": "{description}" }]
        }
      ]
    },
    {
      "type": "hr",
      "className": "info-section__divider"
    },
    {
      "type": "Box",
      "className": "info-section__content",
      "bindings": {
        "children": {
          "source": "items",
          "transform": "source.map((item, index) => ({ id: `item-${index}`, type: 'Box', className: 'info-section__row', children: [{ type: 'Label', className: 'info-section__row-label', children: [{ type: 'Text', value: item.label }] }, { type: 'Box', className: 'info-section__row-value', children: [{ type: 'Text', value: item.value }] }] }))"
        }
      }
    }
  ]
}
