{
  "id": "range-slider-root",
  "type": "Container",
  "bindings": {
    "className": {
      "source": "className",
      "transform": "data ? data + ' form-range-slider' : 'form-range-slider'"
    }
  },
  "children": [
    {
      "id": "range-slider-header",
      "type": "div",
      "props": {
        "className": "form-range-slider__header"
      },
      "conditional": {
        "if": "(() => { return label || showValue; })()"
      },
      "children": [
        {
          "id": "range-slider-label",
          "type": "span",
          "props": {
            "className": "form-range-slider__label"
          },
          "bindings": {
            "children": "label"
          },
          "conditional": {
            "if": "label"
          }
        },
        {
          "id": "range-slider-value",
          "type": "span",
          "props": {
            "className": "form-range-slider__value"
          },
          "bindings": {
            "children": {
              "source": "value",
              "transform": "data ? `${data[0]} - ${data[1]}` : ''"
            }
          },
          "conditional": {
            "if": "showValue"
          }
        }
      ]
    },
    {
      "id": "range-slider-track",
      "type": "Slider",
      "bindings": {
        "value": "value",
        "onValueChange": "onChange"
      },
      "props": {
        "minStepsBetweenThumbs": 1
      },
      "conditionalProps": {
        "min": "min",
        "max": "max",
        "step": "step"
      }
    }
  ]
}
