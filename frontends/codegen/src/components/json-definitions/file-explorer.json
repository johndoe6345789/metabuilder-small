{
  "id": "file-explorer-container",
  "type": "div",
  "props": {
    "className": "h-full flex flex-col border-r border-border bg-card"
  },
  "children": [
    {
      "id": "file-explorer-header",
      "type": "div",
      "props": {
        "className": "p-3 border-b border-border flex items-center justify-between"
      },
      "children": [
        {
          "id": "file-explorer-title",
          "type": "h3",
          "props": {
            "className": "font-semibold text-sm uppercase tracking-wide flex items-center gap-2"
          },
          "children": [
            {
              "id": "folder-icon",
              "type": "FolderOpen",
              "props": {
                "size": 18,
                "weight": "duotone"
              }
            },
            "Files"
          ]
        },
        {
          "id": "file-explorer-dialog",
          "type": "FileExplorerDialog",
          "bindings": {
            "onFileAdd": "onFileAdd"
          }
        }
      ]
    },
    {
      "id": "file-explorer-list",
      "type": "ScrollArea",
      "props": {
        "className": "flex-1"
      },
      "children": [
        {
          "id": "file-explorer-items",
          "type": "FileExplorerList",
          "bindings": {
            "files": "files",
            "activeFileId": "activeFileId",
            "onFileSelect": "onFileSelect"
          }
        }
      ]
    }
  ]
}
