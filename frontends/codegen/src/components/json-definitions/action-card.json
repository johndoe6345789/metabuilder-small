{
  "id": "action-card-root",
  "type": "Card",
  "bindings": {
    "className": {
      "source": "disabled",
      "transform": "data ? 'action-card action-card--disabled' : 'action-card'"
    }
  },
  "children": [
    {
      "id": "action-card-content",
      "type": "CardContent",
      "props": {
        "className": "action-card__content"
      },
      "children": [
        {
          "id": "action-card-icon-wrapper",
          "type": "div",
          "props": {
            "className": "action-card__icon-wrapper"
          },
          "bindings": {
            "children": "icon"
          },
          "conditional": {
            "if": "icon"
          }
        },
        {
          "id": "action-card-text-container",
          "type": "div",
          "props": {
            "className": "action-card__text"
          },
          "children": [
            {
              "id": "action-card-title",
              "type": "div",
              "props": {
                "className": "action-card__title"
              },
              "bindings": {
                "children": "title"
              }
            },
            {
              "id": "action-card-description",
              "type": "div",
              "props": {
                "className": "action-card__description"
              },
              "bindings": {
                "children": "description"
              },
              "conditional": {
                "if": "description"
              }
            }
          ]
        },
        {
          "id": "action-card-caret",
          "type": "CaretRight",
          "props": {
            "size": 16,
            "className": "action-card__caret"
          }
        }
      ]
    }
  ]
}
